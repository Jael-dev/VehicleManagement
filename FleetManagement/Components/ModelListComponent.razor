@inject ModelServices ModelService

<h3>ModelListComponent</h3>

@* display all models in table *@

<div class="row">
    <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Maintenance Frequency</th>
                    </tr>
                </thead>
                <tbody>
                @if (_models != null)
                    {
                        @foreach (var model in _models)
                        {
                            <tr>
                                <td>@model.Id</td>
                                <td>@model.Model</td>
                                <td>@model.MaintenanceFrequency</td>
                                <td>
                                    <button class="btn btn-primary">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <p>No models found</p>
                    }
                
                </tbody>
            </table>
    
</div>

